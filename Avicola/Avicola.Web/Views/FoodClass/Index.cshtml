@using Avicola.Office.Entities
@using Framework.Common.Web.Helpers;
@using PagedList.Mvc;
@model Avicola.Web.Models.FoodClasses.FoodClassListModel
@{
    ViewBag.Title = "Clases de Comida";
}

<h3>Clases de Comida</h3>

<div class="spacer">
</div>


@Html.Partial("_Filters", Model.Filters)

<div class="spacer">
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Fecha</th>            
        </tr>
    </thead>
    <tbody class="row-link" data-link="row">
        @foreach (var foodClass in Model.List)
        {
            <tr>
                <td>@Html.ActionLink(foodClass.Name, "Detail", "FoodClass", routeValues: new { foodClass.Id }, htmlAttributes: null)</td>
                <td>@foodClass.CreatedDate</td>                
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model.List, page => Url.Action("Index", Model.Filters.GetRouteValues(page)))