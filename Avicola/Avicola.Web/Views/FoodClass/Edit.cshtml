@using Framework.Common.Web.Helpers
@model Avicola.Web.Models.FoodClasses.FoodClassForm
@{
    ViewBag.Title = "Editar Clase de Comida";
}

<h3>Editar Clase de Comida</h3>
@Html.BackButton("/FoodClass")
<hr />
@using (Html.BeginForm("Edit", "FoodClass", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Editar" class="btn btn-default"/>
        </div>
    </div>
}