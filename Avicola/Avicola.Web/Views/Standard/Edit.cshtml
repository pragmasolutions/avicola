@using Framework.Common.Web.Helpers
@model Avicola.Web.Models.Standards.StandardForm
@{
    ViewBag.Title = "Editar Estandar";
}

<h3>Editar Estandar</h3>
@Html.BackButton("/Standard")
<hr />
@using (Html.BeginForm("Edit", "Standard", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Editar" class="btn btn-default"/>
        </div>
    </div>
}