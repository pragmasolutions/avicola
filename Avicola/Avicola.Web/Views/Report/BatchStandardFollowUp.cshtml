@using Avicola.Reports.Enums
@model Avicola.Web.Models.Reports.BatchStandardFollowUpModel
@{
    ViewBag.Title = "Estándar Individual por Lote";
}

@Html.PaginaTitulo("Estándar Individual por Lote", "fa-bar-chart-o")


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <!-- Area de filtros -->
                <div>
                    @using (Html.BeginForm("GenerateBatchStandardFollowUp", "Report", FormMethod.Get, new {@class = "form-inline"}))
                    {
                        <table style="width: 100%;">
                            <tr>
                                <td>
                                    @Html.LabelFor(model => model.BatchStatus, new {@class = "label-inline"})
                                    <div class="form-group" style="margin-left: 10px;">
                                        @Html.EditorFor(model => model.BatchStatus)
                                    </div>
                                </td>
                                <td>
                                    @Html.LabelFor(model => model.BatchId, new {@class = "label-inline"})
                                    <div class="form-group date-container">
                                        @Html.DropDownListFor(model => model.BatchId, ViewBag.BatchesSelectList as SelectList, "Seleccione Lote", new {@data_searchable = "true", @class = "form-control select2-control", @style = "width: 180px;"})

                                    </div>
                                </td>
                                <td>
                                    @Html.LabelFor(model => model.StandardId, new {@class = "label-inline"})
                                    <div class="form-group date-container">
                                        @Html.DropDownListFor(model => model.StandardId, (SelectList)ViewBag.Standards, new { @class = "form-control select2-control" })
                                    </div>
                                </td>
                                <td>
                                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-refresh"></span>&nbsp;&nbsp;Actualizar</button>
                                </td>
                            </tr>
                        </table>
                    }
                </div>
                
                <!-- Area de reporte -->
                <div id="ReportContainer" style="width: 1100px; height: 400px; margin-top: 10px;">
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    @Scripts.Render("~/Scripts/Highcharts-4.1.8/js/highcharts.js")
    @Scripts.Render("~/Scripts/Highcharts-4.1.8/js/modules/exporting.js")
    @Scripts.Render("~/Scripts/app/reports.js")
    @Scripts.Render("~/Scripts/app/reports-batch-standard-followup.js")
}