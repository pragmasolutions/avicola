@using Framework.Common.Web.Helpers;
@using PagedList.Mvc;
@model Avicola.Web.Models.GeneticLines.GeneticLineListModel

<br/>
@Html.ActionLink("Crear Línea Genética", "Create", "GeneticLine", htmlAttributes: new { @class = "btn btn-primary" })

@Html.FilterButton()

<div class="spacer">
</div>


@Html.Partial("_Filters", Model.Filters)

<div class="spacer">
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Ciclo de Vida</th>
        </tr>
    </thead>
    <tbody class="row-link" data-link="row">
        @foreach (var line in Model.List)
        {
            <tr>
                <td>@Html.ActionLink(line.Name, "Detail", "GeneticLine", routeValues: new { line.Id }, htmlAttributes: null)</td>
                <td>@line.ProductionWeeks semanas</td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model.List, page => Url.Action("Index", Model.Filters.GetRouteValues(page)))