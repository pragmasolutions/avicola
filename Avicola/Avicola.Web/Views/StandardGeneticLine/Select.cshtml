@using Framework.Common.Web.Helpers
@model Avicola.Web.Models.GeneticLines.SelectStandardModel

@Html.PopupTitulo("Seleccionar Estandar")
@using (Html.BeginForm("Select", "StandardGeneticLine"))
{
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-12">
                @Html.EditorForModel()
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-floppy-disk"></span>&nbsp;&nbsp;Seleccionar</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Cancelar</button>
    </div>
}

<style>
    label {
        display: inline-table;
    }

    .form-group {
        margin-bottom: 20px;
        float: left;
    }
</style>