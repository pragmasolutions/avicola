@using Framework.Common.Web.Helpers
@model Avicola.Web.Models.DriverForm
@{
    ViewBag.Title = "Editar Conductor";
}

<h3>Editar Conductor</h3>
@Html.BackButton("/Driver")
<hr />
@using (Html.BeginForm("Edit", "Driver", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.EditorForModel()
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Editar" class="btn btn-default" />
        </div>
    </div>
}