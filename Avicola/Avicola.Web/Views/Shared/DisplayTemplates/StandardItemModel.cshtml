@model Avicola.Web.Models.GeneticLines.StandardItemModel

<tr>
    <td style="text-align: center;" class="item-sequence">@Model.Sequence</td>
    <td></td>
    <td style="text-align: center;" class="item-value first-value">@Model.Value1.ToString("N2")</td>
    @if (Model.ShowSecondValue)
    {
        <td style="text-align: center;" class="item-value second-value">@Model.Value2.GetValueOrDefault().ToString("N2")</td>
    }
</tr>