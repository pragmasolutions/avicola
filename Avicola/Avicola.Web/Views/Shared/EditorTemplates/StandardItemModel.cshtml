@model Avicola.Web.Models.GeneticLines.StandardItemModel

<tr>
    <td style="text-align: center;">@Model.Sequence</td>
    <td>@Html.HiddenFor(model => model.Sequence)</td>
    <td style="text-align: center;" class="item-value first-value">@Html.TextBoxFor(model => model.Value1, new { @class = "form-control autonumeric-control standard-item-value", data_a_sep = "", data_a_dec = "," })</td>
    @if (Model.ShowSecondValue)
    {
        <td style="text-align: center;" class="item-value second-value">@Html.TextBoxFor(model => model.Value2, new { @class = "form-control autonumeric-control standard-item-value", data_a_sep = "", data_a_dec = "," })</td>
    }
</tr>