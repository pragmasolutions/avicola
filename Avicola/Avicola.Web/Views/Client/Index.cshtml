@model Avicola.Web.Models.ClientListModel

<br/>

@Html.ActionLink("Crear Cliente", "Create", "Client", htmlAttributes: new { @class = "btn btn-primary" })


@Html.FilterButton()

<div class="spacer">
</div>

@Html.Partial("_Filters", Model.Filters)

<div class="spacer">
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>@AvicolaGlobalResources.Name</th>
            <th>@AvicolaGlobalResources.Address</th>
            <th>@AvicolaGlobalResources.City</th>
            <th>@AvicolaGlobalResources.Tel1</th>
            <th>@AvicolaGlobalResources.CellPhone</th>
        </tr>
    </thead>
    <tbody class="row-link" data-link="row">
        @foreach (var client in Model.List)
        {
            <tr>
                <td>@Html.ActionLink(client.Name, "Detail", "Client", routeValues: new { client.Id }, htmlAttributes: null)</td>
                <td>@client.Address</td>
                <td>@client.City</td>
                <td>@client.Tel1</td>
                <td>@client.CellPhone</td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager(Model.List, page => Url.Action("Index", Model.Filters.GetRouteValues(page)))